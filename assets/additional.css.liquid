.delivery_country {
  display: flex;
  align-items: center;
  margin-bottom: 15px;
}
.delivery_country_flag {
  width: 40px;
  height: 40px;
  margin-right: 10px;
  border-radius: 50%;
  overflow: hidden;
  box-shadow: 0 0 10px 0px #999;
}
.delivery_country_flag img {
  display: block;
  width: 100%;
  height: auto;
}
.delivery_country_name {
  font-weight: bold;
}
.brands-list-container {
  display: grid;
  grid-template-columns: 1fr;
  gap: 15px 10px;
  margin-bottom: 50px;
}
.brands-list-container .divider {
  grid-column-start: 1;
}
.newsletter-form__notice {
  margin-top: 10px;
  font-size: 13px;
  text-align: right;
  color: rgb(var(--color-foreground-secondary));
}
.newsletter-form__notice a {
  white-space: nowrap;
}

@media screen and (min-width: 990px) {
  .brands-list-container {
    grid-template-columns: repeat(2, 1fr);
  }
  .brands-list-container .divider {
    grid-column-end: 3;
  }
}
@media screen and (min-width: 1200px) {
  .brands-list-container {
    grid-template-columns: repeat(3, 1fr);
  }
  .brands-list-container .divider {
    grid-column-end: 4;
  }
}

@media only screen and (min-width: 1600px) {
  .brands-list-container {
    grid-template-columns: repeat(4, 1fr);
  }
  .brands-list-container .divider {
    grid-column-end: 5;
  }
}

@media (max-width: 1199px) {
  .huk_menu_item .huk_menu_collection > img {
    display: none !important;
  }
  .huk_menu_item .huk_menu_collection > img + .huk_menu_item_text {
    margin-top: 0;
  }
}
@media screen and (max-width: 989px) {
  .header__localization {
    display: block !important;
    padding-inline: 0 !important;
  }
  .menu-drawer .header__localization {
    display: none !important;
  }
}
@media screen and (max-width: 750px) {
  .multicolumn-list__wrapper--2, .multicolumn-list__wrapper--3, .multicolumn-list__wrapper--4 {
    display: flex !important;
    flex-direction: column;
  }
}