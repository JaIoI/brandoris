.delivery_country {
  display: flex;
  align-items: center;
  margin-bottom: 15px;
}
.delivery_country_flag {
  width: 40px;
  height: 40px;
  margin-right: 10px;
  border-radius: 50%;
  overflow: hidden;
}
.delivery_country_flag img {
  display: block;
  width: 100%;
  height: auto;
}
.delivery_country_name {
  font-weight: bold;
}
.brands-list-container {
  display: flex;
  flex-wrap: wrap;
  gap: 5px 10px;
}

@media (max-width: 1199px) {
  .huk_menu_item .huk_menu_collection > img {
    display: none !important;
  }
  .huk_menu_item .huk_menu_collection > img + .huk_menu_item_text {
    margin-top: 0;
  }
}
@media screen and (max-width: 750px) {
  .multicolumn-list__wrapper--2, .multicolumn-list__wrapper--3, .multicolumn-list__wrapper--4 {
    display: flex !important;
    flex-direction: column;
  }
}